# Root .editorconfig for dotfiles repository
root = true

# Default settings for all files
[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
indent_style = space
indent_size = 2
trim_trailing_whitespace = true

# Configuration files
[*.{yml,yaml,json,toml}]
indent_size = 2

# Shell scripts
[*.sh]
indent_style = space
indent_size = 2
trim_trailing_whitespace = true

# Markdown files
[*.md]
trim_trailing_whitespace = false
indent_size = 4

# Python scripts
[*.py]
indent_style = space
indent_size = 4

# Makefiles
[Makefile]
indent_style = tab

# Vim scripts
[*.vim]
indent_style = space
indent_size = 2

# Lua scripts
[*.lua]
indent_style = space
indent_size = 2

